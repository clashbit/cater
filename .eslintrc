{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": 0,
    "function-paren-newline": 0,
    "import/extensions": 0,
    "import/first": 0,
    "import/no-extraneous-dependencies": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "no-unused-expressions": [2, { "allowTaggedTemplates": true }],
    "import/no-unresolved": [2, { "ignore": ["^(app|assets|client|server)/.*"] }],
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "react/sort-comp": 0
  },
  "env": {
    "jest": true,
    "browser": "true"
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}
